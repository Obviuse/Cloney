<UserControl x:Class="Cloney.Wizard.Controls.FolderSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Resources="clr-namespace:Cloney.Wizard.Resources" mc:Ignorable="d" 
             d:DesignWidth="300">

    <Control.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10 0 0 0"></Setter>
        </Style>
    </Control.Resources>

    <StackPanel>
        <DockPanel>
            <Button Name="btnSelect" DockPanel.Dock="Right" Click="btnSelect_Click">
                <Button.Content>
                    <Label Content="{x:Static Resources:Language.Select}" Style="{StaticResource ButtonLabel}" />
                </Button.Content>
            </Button>
            <TextBox Name="txtFolder" TextChanged="textBox_Changed"></TextBox>
        </DockPanel>
        <TextBox Name="txtNamespace" Margin="0 5 0 0 " TextChanged="textBox_Changed"></TextBox>
    </StackPanel>
</UserControl>
